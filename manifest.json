{
  "manifest_version": 3,
  "name": "Azure DevOps Theme Extension",
  "version": "1.0.1",
  "description": "Extensi√≥n para personalizar la apariencia de Azure DevOps con estilos CSS y funcionalidades JavaScript",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://dev.azure.com/*",
    "https://*.dev.azure.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://dev.azure.com/*",
        "https://*.dev.azure.com/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": [
        "https://dev.azure.com/*",
        "https://*.dev.azure.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}